extends base 

block content 
    img(src=loggedInUser.avatarUrl width="100" height="100")
    form(method="POST" enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file" id="avatar" name="avatar" accept="image/*" )
        input(placeholder="Email" type="email" name="email" value=loggedInUser.email)
        input(placeholder="Name" type="text" name="name" value=loggedInUser.name)
        input(placeholder="Username" name="username" type="text" value=loggedInUser.username)
        input(placeholder="Location" name="location" type="text" value=loggedInUser.location)
        input(type="submit" value="Edit Profile")
        hr
        if !loggedInUser.socialOnly
            hr
            a(href="change-password") Change Password &rarr;