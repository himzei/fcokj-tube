extends base 

block content 
    form(method="POST")
        input(placeholder="Email" type="email" name="email" value=loggedInUser.email)
        input(placeholder="Name" type="text" name="name" value=loggedInUser.name)
        input(placeholder="Username" name="username" type="text" value=loggedInUser.username)
        input(placeholder="Location" name="location" type="text" value=loggedInUser.location)
        input(type="submit" value="Edit Profile")